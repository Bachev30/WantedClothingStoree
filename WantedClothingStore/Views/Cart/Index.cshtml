<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart - WANTED STORE</title>
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family: Arial, sans-serif;
            text-align: center;
        }

        .cart-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            border: 2px solid #fff;
        }

        .cart-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            border-bottom: 1px solid #fff;
        }

            .cart-item img {
                width: 100px;
                height: auto;
                margin-right: 20px;
            }

        .cart-actions {
            margin-top: 20px;
        }

        .btn {
            background-color: #fff;
            color: #000;
            padding: 10px 20px;
            text-decoration: none;
            font-weight: bold;
            border: 2px solid #fff;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn:hover {
                background-color: #000;
                color: #fff;
            }
    </style>
</head>
<body>
    <header>
        <h1>Your Cart</h1>
    </header>

    <div class="cart-container">
        @if (Model.Count == 0)
        {
            <p>Your cart is currently empty.</p>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="cart-item">
                    <div class="item-info">
                        <img src="@item.ImageUrl" alt="@item.Name" />
                        <div>
                            <h4>@item.Name</h4>
                            <p>Price: $@item.Price</p>
                            <p>Size: @item.Size</p>
                        </div>
                    </div>
                    <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = item.Id })" class="btn">Remove</a>
                </div>
            }

            <div class="cart-actions">
                <p>Total Price: $@ViewBag.TotalPrice</p>
                <a href="@Url.Action("ClearCart", "Cart")" class="btn">Clear Cart</a>
                <a href="/Checkout" class="btn">Proceed to Checkout</a>
            </div>
        }
    </div>
    <div class="cart-actions">
        @{
            double totalPrice = 0;
            foreach (var item in Model)
            {
                totalPrice += item.Price;
            }
        }
        <p>Total Price: $@totalPrice</p>
        <a href="@Url.Action("ClearCart", "Cart")" class="btn">Clear Cart</a>
        <a href="/Checkout" class="btn">Proceed to Checkout</a>
    </div>
</body>
</html>

